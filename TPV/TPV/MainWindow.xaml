<Window x:Class="TPV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TPV"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
            <Label Content="Login" HorizontalAlignment="Center" Margin="0,106,0,0" VerticalAlignment="Top" FontFamily="Corbel" FontSize="22"/>
            <TextBox x:Name="usuario" HorizontalAlignment="Center" Margin="0,178,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
            <PasswordBox  x:Name="contraseña" HorizontalAlignment="Center" Margin="0,217,0,0"  VerticalAlignment="Top" Width="120"/>
            <Button x:Name="login" Content="Log In" HorizontalAlignment="Center" Margin="0,257,0,0" VerticalAlignment="Top" Click="Login_Click"/>
            <Label Content="Usuario" HorizontalAlignment="Left" Margin="340,153,0,0" VerticalAlignment="Top" FontFamily="Corbel"/>
            <Label Content="Contraseña" HorizontalAlignment="Left" Margin="340,196,0,0" VerticalAlignment="Top" FontFamily="Corbel"/>

    </Grid>
</Window>
