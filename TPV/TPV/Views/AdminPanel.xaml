<Window x:Class="TPV.Views.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:TPV.Views.Components"
        Title="Admin Panel" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <components:NavMenu Grid.Column="0" x:Name="navMenu" />

        <ContentControl Grid.Column="1" x:Name="MainContent" />
    </Grid>
    
</Window>
