<Window x:Class="TPV.Views.Components.ProductDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Producto" Height="250" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20">
        <Label Content="Nombre:"/>
        <TextBox x:Name="txtName"/>

        <Label Content="Precio:"/>
        <TextBox x:Name="txtPrice"/>

        <Label Content="Stock:"/>
        <TextBox x:Name="txtStock"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Guardar" Width="80" Margin="5" Click="Save_Click"/>
            <Button Content="Cancelar" Width="80" Margin="5" Click="Cancel_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
