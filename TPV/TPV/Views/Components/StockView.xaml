<UserControl x:Class="TPV.Views.Components.StockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White">

	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<TextBlock Text="Gestión de Stock"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

		<!-- Tabla de productos -->
		<DataGrid x:Name="dgProducts"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,10,0,10">
			<DataGrid.Columns>
				<DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
				<DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="*"/>
				<DataGridTextColumn Header="Precio (€)" Binding="{Binding Price}" Width="100"/>
				<DataGridTextColumn Header="Stock" Binding="{Binding Stock}" Width="100"/>
			</DataGrid.Columns>
		</DataGrid>

		<!-- Botones CRUD -->
		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
			<Button Content="Añadir" Width="100" Margin="5" Click="Add_Click"/>
			<Button Content="Editar" Width="100" Margin="5" Click="Edit_Click"/>
			<Button Content="Eliminar" Width="100" Margin="5" Click="Delete_Click"/>
			<Button Content="Refrescar" Width="100" Margin="5" Click="Refresh_Click"/>
		</StackPanel>
	</Grid>
</UserControl>
