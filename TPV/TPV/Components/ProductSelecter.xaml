<UserControl x:Class="TPV.Components.ProductSelecter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#f5f5f5"
             Padding="10">

	<Border CornerRadius="10" Background="White" Padding="10" BorderBrush="#ddd" BorderThickness="1">
		<StackPanel>
			<TextBlock Text="Productos seleccionados"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,10"/>

			<ListView x:Name="lvSelectedProducts" Height="200">
				<ListView.View>
					<GridView>
						<GridViewColumn Header="Producto" DisplayMemberBinding="{Binding Name}" Width="150"/>
						<GridViewColumn Header="Precio (€)" DisplayMemberBinding="{Binding Price}" Width="80"/>
                        <GridViewColumn Header="Kantitatea " DisplayMemberBinding="{Binding Quantity}" Width="80"/>
                        <GridViewColumn Header="Total (€) " DisplayMemberBinding="{Binding TotalPrice}" Width="80"/>

                    </GridView>
				</ListView.View>
			</ListView>

			
		</StackPanel>
	</Border>
</UserControl>
