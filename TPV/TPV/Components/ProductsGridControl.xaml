<UserControl x:Class="TPV.Components.ProductsGridControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="600"
             Background="#f5f5f5" Padding="10">
	
	
    <StackPanel>
        <TextBlock Text="Productos" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,10"/>


        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <UniformGrid x:Name="productGrid" Columns="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0" >

			</UniformGrid>
        </ScrollViewer>
    </StackPanel>
</UserControl>
