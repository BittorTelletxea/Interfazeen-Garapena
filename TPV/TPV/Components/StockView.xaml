<UserControl x:Class="TPV.Components.StockView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gestión de Stock"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <DataGrid x:Name="dgProducts"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  Margin="0,10,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" IsReadOnly="True" Width="70"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Name, Mode=TwoWay}" Width="130"/>
                <DataGridTextColumn Header="Precio (€)" Binding="{Binding Price, Mode=TwoWay}" Width="130"/>
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock, Mode=TwoWay}" Width="130"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Añadir" Width="100" Margin="5" Click="Add_Click"/>
            <Button Content="Editar" Width="100" Margin="5" Click="Edit_Click"/>
            <Button Content="Eliminar" Width="100" Margin="5" Click="Delete_Click"/>
            <Button Content="Refrescar" Width="100" Margin="5" Click="Refresh_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
