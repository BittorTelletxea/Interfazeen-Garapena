<UserControl x:Class="TPV.Components.CalculatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="400" Width="300"
             Background="#ecf0f1" Padding="10">

    <StackPanel>
        <TextBox x:Name="txtDisplay" Height="50" FontSize="24" IsReadOnly="True" 
                 HorizontalContentAlignment="Right" Margin="0,0,0,10" Background="White"/>

        <UniformGrid Rows="5" Columns="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0">
            <Button Content="7" FontSize="18" Margin="2" Click="Button_Click"/>
            <Button Content="8" FontSize="18" Margin="2" Click="Button_Click"/>
            <Button Content="9" FontSize="18" Margin="2" Click="Button_Click"/>

            <Button Content="4" FontSize="18" Margin="2" Click="Button_Click"/>
            <Button Content="5" FontSize="18" Margin="2" Click="Button_Click"/>
            <Button Content="6" FontSize="18" Margin="2" Click="Button_Click"/>

            <Button Content="1" FontSize="18" Margin="2" Click="Button_Click"/>
            <Button Content="2" FontSize="18" Margin="2" Click="Button_Click"/>
            <Button Content="3" FontSize="18" Margin="2" Click="Button_Click"/>

            <Button Content="0" FontSize="18" Margin="2" Click="Button_Click"/>
            <Button Content="C" FontSize="18" Margin="2" Background="#e74c3c" Foreground="White"/>
            <Button Content="=" FontSize="18" Margin="2" Background="#27AE60" Foreground="White" Click="Button_Click_1"/>
        </UniformGrid>
    </StackPanel>
</UserControl>
