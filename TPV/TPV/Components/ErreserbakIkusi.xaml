<UserControl
    x:Class="TPV.Components.ErreserbakIkusi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d"
    Background="#FAFAFA"
    Padding="20"
    Width="620" Height="580">

    <UserControl.Resources>

        <!-- Botones principales -->
        <Style x:Key="MainButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="Blue"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Blue"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="130"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Botones de reservas -->
        <Style TargetType="Button" x:Key="ReservaButtonStyle">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Background" Value="Green"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

    </UserControl.Resources>

    <StackPanel Orientation="Vertical" VerticalAlignment="Top">

        <!-- Controles superiores -->
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20">

            <Button x:Name="btnBazkaria"
                    Content="Bazkaria"
                    Click="kargatuBazkariak"
                    Style="{StaticResource MainButtonStyle}" />

            <Button x:Name="btnAfaria"
                    Content="Afaria"
                    Click="loadAfariak"
                    Style="{StaticResource MainButtonStyle}" />

            <Button x:Name="btnAukeratuData"
                    Content="Aukeratu data"
                    Click="btnAukeratuData_Click"
                    Style="{StaticResource MainButtonStyle}" />

            <!-- Popup calendario -->
            <Popup x:Name="popupKalendarioa"
                   PlacementTarget="{Binding ElementName=btnAukeratuData}"
                   StaysOpen="False">

                <Border Background="White"
                        BorderBrush="#BDBDBD"
                        BorderThickness="1"
                        Padding="10"
                        CornerRadius="8"
                        >
                    <Calendar x:Name="eguna"
                              SelectedDatesChanged="eguna_SelectedDatesChanged"/>
                </Border>
            </Popup>

        </StackPanel>

        <!-- Contenedor de reservas -->
        <Border Background="White" CornerRadius="10"
                BorderBrush="#E0E0E0" BorderThickness="1" Padding="10">

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <UniformGrid x:Name="productGrid"
                             Columns="3"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Top">

                    <Button Content="1" x:Name="btn1" Style="{StaticResource ReservaButtonStyle}" Click="btn1_Click"/>
                    <Button Content="2" x:Name="btn2" Style="{StaticResource ReservaButtonStyle}" Click="btn1_Click"/>
                    <Button Content="3" x:Name="btn3" Style="{StaticResource ReservaButtonStyle}" Click="btn1_Click"/>
                    <Button Content="4" x:Name="btn4" Style="{StaticResource ReservaButtonStyle}" Click="btn1_Click"/>
                    <Button Content="5" x:Name="btn5" Style="{StaticResource ReservaButtonStyle}" Click="btn1_Click"/>
                    <Button Content="6" x:Name="btn6" Style="{StaticResource ReservaButtonStyle}" Click="btn1_Click"/>
                    <Button Content="7" x:Name="btn7" Style="{StaticResource ReservaButtonStyle}" Click="btn1_Click"/>
                    <Button Content="8" x:Name="btn8" Style="{StaticResource ReservaButtonStyle}" Click="btn1_Click"/>
                    <Button Content="9" x:Name="btn9" Style="{StaticResource ReservaButtonStyle}" Click="btn1_Click"/>

                </UniformGrid>
            </ScrollViewer>
        </Border>

    </StackPanel>

</UserControl>
