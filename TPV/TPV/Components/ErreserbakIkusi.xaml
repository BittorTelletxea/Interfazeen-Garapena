    <UserControl
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="TPV.Components.ErreserbakIkusi"
                 Background="#f5f5f5"
                 Padding="10" Width="604" Height="563">
	    <StackPanel>
            
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button x:Name="btnBazkaria" Content="Bazkaria" Width="100" Margin="5" Click="kargatuBazkariak"/>
            <Button x:Name="btnAfaria" Content="Afaria" Width="100" Margin="5" Click="loadAfariak"/>

            <Button x:Name="btnAukeratuData" Margin="5"            Content="Aukeratu data"
            Width="150"
            Click="btnAukeratuData_Click" />

                <Popup x:Name="popupKalendarioa"
           PlacementTarget="{Binding ElementName=btnAukeratuData}"
           StaysOpen="False">

                    <Border Background="White" BorderBrush="Black" BorderThickness="1">
                        <Calendar x:Name="eguna"
                      SelectedDatesChanged="eguna_SelectedDatesChanged" />
                    </Border>

                </Popup>


        </StackPanel>

        <ScrollViewer VerticalScrollBarVisibility="Auto">
			    <UniformGrid x:Name="productGrid" Columns="3" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0" >

				    <Button Content="1" Margin="10" Height="100" x:Name="btn1" Click="btn1_Click" Background="Green"/>
                    <Button Content="2" Margin="10" x:Name="btn2" Click="btn1_Click" Background="Green"/>
                    <Button Content="3" Margin="10" x:Name="btn3" Click="btn1_Click" Background="Green"/>
                    <Button Content="4" Margin="10" x:Name="btn4" Click="btn1_Click" Background="Green"/>
                    <Button Content="5" Margin="10" x:Name="btn5" Click="btn1_Click" Background="Green"/>
                    <Button Content="6" Margin="10" x:Name="btn6" Click="btn1_Click" Background="Green"/>
                    <Button Content="7" Margin="10" x:Name="btn7" Click="btn1_Click" Background="Green"/>
                    <Button Content="8" Margin="10" x:Name="btn8" Click="btn1_Click" Background="Green"/>
                    <Button Content="9" Margin="10" x:Name="btn9" Click="btn1_Click" Background="Green"/>

			    </UniformGrid>
		    </ScrollViewer>


    </StackPanel>

    </UserControl>