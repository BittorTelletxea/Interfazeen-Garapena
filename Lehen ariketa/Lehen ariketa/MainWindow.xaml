<Window x:Class="Lehen_ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lehen_ariketa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="-18,0,0,0">
        <Button Content="Operar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="245,311,0,0" Click="Button_Click"/>
        <Button Content="Limpiar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="383,311,0,0" Click="limpiar"/>

        <Label Content="Primer Número:" HorizontalAlignment="Left" Margin="204,60,0,0" VerticalAlignment="Top" Width="134" Background="DarkRed" Foreground="White" FontFamily="Script MT Bold" FontSize="18"/>
        <Label Content="Segundo Número:" HorizontalAlignment="Left" Margin="204,97,0,0" VerticalAlignment="Top" Width="134" Background="DarkRed" Foreground="White" FontFamily="Script MT Bold" FontSize="18"/>
        <Label Content="Tercer Número:" HorizontalAlignment="Left" Margin="204,134,0,0" VerticalAlignment="Top" Width="134" Background="DarkRed" Foreground="White" FontFamily="Script MT Bold" FontSize="18"/>
        <Label Content="Cuarto Número:" HorizontalAlignment="Left" Margin="204,171,0,0" VerticalAlignment="Top" Width="134" Background="DarkRed" Foreground="White" FontFamily="Script MT Bold" FontSize="18"/>
        <Label Content="Resultado" HorizontalAlignment="Left" Margin="204,244,0,0" VerticalAlignment="Top" Width="90" Background="#FF095C90" Foreground="White" FontFamily="Script MT Bold" FontSize="18"/>
        <Button Content="Salir" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="518,311,0,0" Click="salir"/>
        <TextBox x:Name="primer" HorizontalAlignment="Left" Margin="370,63,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="139" TextChanged="TextBox_TextChanged_1" Height="25" />
        <TextBox x:Name="segundo" HorizontalAlignment="Left" Margin="370,97,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="139" TextChanged="TextBox_TextChanged_1" Height="25"/>
        <TextBox x:Name="tercer" HorizontalAlignment="Left" Margin="370,137,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="139" TextChanged="TextBox_TextChanged_1" Height="25"/>
        <TextBox x:Name="cuarto" HorizontalAlignment="Left" Margin="370,174,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="139" TextChanged="TextBox_TextChanged_1" Height="25"/>
        <TextBox x:Name="resultado" HorizontalAlignment="Left" Margin="370,253,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="236" TextChanged="TextBox_TextChanged_1" Height="23" IsReadOnly="True"/>
    </Grid>
</Window>
