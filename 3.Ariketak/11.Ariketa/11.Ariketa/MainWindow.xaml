<Window x:Class="_11.Ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_11.Ariketa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="251,95,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nombre" HorizontalAlignment="Left" Margin="330,99,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Label Content="1ºApellido:" HorizontalAlignment="Left" Margin="251,142,0,0" VerticalAlignment="Top"/>
        <Label Content="2ºApellido:" HorizontalAlignment="Left" Margin="251,191,0,0" VerticalAlignment="Top"/>
        <Label Content="DNI:" HorizontalAlignment="Left" Margin="251,236,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="apellido1" HorizontalAlignment="Left" Margin="330,150,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="apellido2" HorizontalAlignment="Left" Margin="330,199,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="dni" HorizontalAlignment="Left" Margin="330,244,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"/>
        <Button x:Name="aceptar" Content="Aceptar" HorizontalAlignment="Left" Margin="225,288,0,0" VerticalAlignment="Top" Height="38" Width="75" Click="aceptar_Click"/>
        <Button x:Name="cargar" Content="Cargar y Visualizar" HorizontalAlignment="Left" Margin="318,288,0,0" VerticalAlignment="Top" Height="38" Width="130"/>
        <Button x:Name="salir" Content="Salir" HorizontalAlignment="Left" Margin="470,288,0,0" VerticalAlignment="Top" Height="38" Width="75"/>

    </Grid>
</Window>
