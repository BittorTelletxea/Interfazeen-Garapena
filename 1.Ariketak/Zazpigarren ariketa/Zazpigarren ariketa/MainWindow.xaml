<Window x:Class="Zazpigarren_ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zazpigarren_ariketa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="pantalla" HorizontalAlignment="Left" Margin="275,72,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="318" Height="49" Background="#FFF1FF00"/>
        <Button x:Name="zortzi" Content="8" HorizontalAlignment="Left" Margin="339,152,0,0" VerticalAlignment="Top" Height="40" Width="45"  Click="numeros_click"/>
        <Button x:Name="zazpi" Content="7" HorizontalAlignment="Left" Margin="275,152,0,0" VerticalAlignment="Top" Height="40" Width="45" Click="numeros_click"/>
        <Button x:Name="bederatzi" Content="9" HorizontalAlignment="Left" Margin="400,152,0,0" VerticalAlignment="Top" Height="40" Width="46"  Click="numeros_click"/>
        <Button x:Name="c" Content="C" HorizontalAlignment="Left" Margin="495,142,0,0" VerticalAlignment="Top" Height="40" Width="46" Click="c_Click"/>
        <Button x:Name="ce" Content="CE" HorizontalAlignment="Left" Margin="582,142,0,0" VerticalAlignment="Top" Height="40" Width="46" Click="ce_Click"/>
        <Button x:Name="lau" Content="4" HorizontalAlignment="Left" Margin="275,207,0,0" VerticalAlignment="Top" Height="40" Width="45"  Click="numeros_click"/>
        <Button x:Name="bost" Content="5" HorizontalAlignment="Left" Margin="339,212,0,0" VerticalAlignment="Top" Height="40" Width="45"  Click="numeros_click"/>
        <Button x:Name="sei" Content="6" HorizontalAlignment="Left" Margin="401,212,0,0" VerticalAlignment="Top" Height="40" Width="45"  Click="numeros_click"/>
        <Button x:Name="barra" Content="/" HorizontalAlignment="Left" Margin="496,207,0,0" VerticalAlignment="Top" Height="40" Width="45" Click="operadoreak_click" RenderTransformOrigin="0.563,-0.451"/>
        <Button x:Name="minus" Content="-" HorizontalAlignment="Left" Margin="582,207,0,0" VerticalAlignment="Top" Height="40" Width="45" Click="operadoreak_click"/>
        <Button x:Name="bat" Content="1" HorizontalAlignment="Left" Margin="275,262,0,0" VerticalAlignment="Top" Height="40" Width="45" Click="numeros_click"/>
        <Button x:Name="bi" Content="2" HorizontalAlignment="Left" Margin="339,262,0,0" VerticalAlignment="Top" Height="40" Width="45" Click="numeros_click"/>
        <Button x:Name="hiru" Content="3" HorizontalAlignment="Left" Margin="400,262,0,0" VerticalAlignment="Top" Height="40" Width="45" Click="numeros_click"/>
        <Button x:Name="x" Content="X" HorizontalAlignment="Left" Margin="496,262,0,0" VerticalAlignment="Top" Height="40" Width="45" Click="operadoreak_click"/>
        <Button x:Name="plus" Content="+" HorizontalAlignment="Left" Margin="582,262,0,0" VerticalAlignment="Top" Height="40" Width="46" Click="operadoreak_click"/>
        <Button x:Name="zero" Content="0" HorizontalAlignment="Left" Margin="275,323,0,0" VerticalAlignment="Top" Height="40" Width="109" Click="numeros_click"/>
        <Button x:Name="punto" Content="," HorizontalAlignment="Left" Margin="400,323,0,0" VerticalAlignment="Top" Height="40" Width="45"  Click="numeros_click"/>
        <Button x:Name="berdin" Content="=" HorizontalAlignment="Left" Margin="496,323,0,0" VerticalAlignment="Top" Height="40" Width="45" RenderTransformOrigin="4.834,3.244" Click="operazioa"/>
        <Button x:Name="porcentaje" Content="%" HorizontalAlignment="Left" Margin="583,323,0,0" VerticalAlignment="Top" Height="40" Width="45"   Click="operadoreak_click"/>

    </Grid>
</Window>
