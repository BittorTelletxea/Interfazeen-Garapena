<Window x:Class="Bostgarren_ariketa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bostgarren_ariketa"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="comic_sans" Content="Comic Sans" HorizontalAlignment="Left" Margin="223,90,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Button x:Name="negrita" Content="Negrita" HorizontalAlignment="Left" Margin="334,90,0,0" VerticalAlignment="Top" Width="66" Click="Button_Click"/>
        <Button x:Name="tachado" Content="Tachado" HorizontalAlignment="Left" Margin="436,90,0,0" VerticalAlignment="Top" Width="72" Click="Button_Click"/>
        <Button x:Name="mas_tamano" Content="+Tamaño" HorizontalAlignment="Left" Margin="545,90,0,0" VerticalAlignment="Top" Width="77" Click="Button_Click"/>
        <Button x:Name="courier" Content="Courier" HorizontalAlignment="Left" Margin="223,140,0,0" VerticalAlignment="Top" Width="65" Click="Button_Click"/>
        <Button x:Name="cursiva" Content="Cursiva" HorizontalAlignment="Left" Margin="334,140,0,0" VerticalAlignment="Top" Width="66" Click="Button_Click"/>
        <Button x:Name="subrayado" Content="Subrayado" HorizontalAlignment="Left" Margin="436,140,0,0" VerticalAlignment="Top" Width="72" Click="Button_Click"/>
        <Button x:Name="menos_tamano" Content="-Tamaño" HorizontalAlignment="Left" Margin="545,140,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.383,1.376" Width="77" Click="Button_Click"/>
        <TextBox x:Name="seleccionado" HorizontalAlignment="Left" Margin="223,217,0,0" TextWrapping="Wrap" Text="Este será el texto seleccionado" VerticalAlignment="Top" Width="231" Height="85" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="seleccionar" Content="Seleccionar" HorizontalAlignment="Left" Margin="498,260,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.383,1.376" Width="124" Click="seleccionado_click"/>
        <Button x:Name="salir" Content="Salir" HorizontalAlignment="Left" Margin="562,308,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.383,1.376" Width="60" Click="salir_Click"/>
        <Label x:Name="resultado" Content="" HorizontalAlignment="Left" Margin="400,353,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="prueba" HorizontalAlignment="Left" Margin="374,43,0,0" TextWrapping="Wrap" Text="TEXTO DE PRUEBA" VerticalAlignment="Top"/>


    </Grid>
</Window>
