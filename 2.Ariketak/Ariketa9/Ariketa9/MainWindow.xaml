<Window x:Class="Ariketa9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ariketa9"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lista"  Margin="208,104,463,200" SelectionChanged="ListBox_SelectionChanged"/>
        <Label Content="Mis Amigos" HorizontalAlignment="Left" Margin="208,61,0,0" VerticalAlignment="Top"/>
        <Label Content="Amigo Seleccionado" HorizontalAlignment="Left" Margin="208,239,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="seleccionado" HorizontalAlignment="Left" Margin="208,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="129" TextChanged="TextBox_TextChanged" IsReadOnly="True"/>
        <Label Content="Amigo Nuevo" HorizontalAlignment="Left" Margin="208,309,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nuevo" HorizontalAlignment="Left" Margin="213,340,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="124"/>
        <Button x:Name="añadir" Content="Añadir" HorizontalAlignment="Left" Margin="437,62,0,0" VerticalAlignment="Top" Height="40" Width="98" Click="Button_Click"/>
        <Button x:Name="eliminar" Content="Eliminar" HorizontalAlignment="Left" Margin="437,118,0,0" VerticalAlignment="Top" Height="40" Width="98" Click="eliminar_Click"/>
        <Button x:Name="borrar" Content="Borrar Lista" HorizontalAlignment="Left" Margin="437,177,0,0" VerticalAlignment="Top" Height="40" Width="98" Click="borrar_Click"/>
        <Button x:Name="salir" Content="Salir" HorizontalAlignment="Left" Margin="437,322,0,0" VerticalAlignment="Top" Height="40" Width="98" Click="salir_Click"/>

    </Grid>
</Window>
